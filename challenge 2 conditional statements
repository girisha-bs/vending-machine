#include<stdio.h>
int main()
{
int x=0;

printf("MENU\n");
printf("1.Pasta=Rs 179\n2.Burger=Rs 129\n3.French Fries=Rs 99\n4.Pizza=Rs 239\n5.Sandwich=Rs 149\n");
printf("Enter the choice number\n");

scanf("%d",&x);

switch(x)
{
case 1:
printf("You have selected Pasta\n");
printf("The cost of Pasta is Rs 179\n");
break;
case 2:
printf("You have selected Burger\n");
printf("The cost of Burger is Rs 129\n");
break;
case 3:
printf("You have selected French Fries\n");
printf("The cost of French Fries is Rs 99\n");
break;
case 4:
printf("You have selected Pizza\n");
printf("The cost of Pizza is Rs 239\n");
break;
case 5:
printf("You have selected Sandwich\n");
printf("The cost of Sandwich is Rs 149\n");
break;
default:
printf("INVALID INPUT!!!\n");
}
}
